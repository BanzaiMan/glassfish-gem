<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.glassfish.scripting</groupId>
    <artifactId>glassfish-gem</artifactId>
    <version>0.9.6-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Glassfish JRuby Gem distribution</name>
    <description>This module creates the jruby gem distribution image</description>

    <properties>
        <glassfish.version>3.0-b69</glassfish.version>
        <gem.version>0.9.6</gem.version>
        <jruby-container.version>1.0-SNAPSHOT</jruby-container.version>
        <hk2.version>0.4.4</hk2.version>
        <grizzly-jruby.version>1.8.23-SNAPSHOT</grizzly-jruby.version>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>com.sun.enterprise</groupId>
                <artifactId>hk2-maven-plugin</artifactId>
                <version>${hk2.version}</version>
                <extensions>true</extensions>
            </plugin>


            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>${artifactId}</finalName>
                    <archive>
                        <manifestEntries>
                            <Class-Path>akuma.jar gf-jruby-connector.jar grizzly-jruby-module.jar glassfish-embedded-nucleus.jar
                            </Class-Path>
                        </manifestEntries>

                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            <mainClass>org.glassfish.scripting.gem.GlassFishMain</mainClass>
                        </manifest>
                    </archive>
                </configuration>

            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/stage/lib/java</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludeTransitive>true</excludeTransitive>
                            <includeScope>runtime</includeScope>
                            <stripVersion>true</stripVersion>
                        </configuration>
                   </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jvnet.maven-antrun-extended-plugin</groupId>
                <artifactId>maven-antrun-extended-plugin</artifactId>
                <version>1.40</version>
                <executions>
                    <execution>
                        <id>prepare</id>
                        <phase>pre-integration-test</phase>
                        <configuration>
                            <tasks>
                                <mkdir dir="target/stage"/>
                                <mkdir dir="target/stage/bin"/>
                                <mkdir dir="target/stage/lib/java"/>
                                <mkdir dir="target/stage/lib/java/grizzly"/>
                                <move file="target/stage/lib/java/grizzly-jruby.jar" todir="target/stage/lib/java/grizzly"/>
                                <copy file="bin/glassfish" todir="target/stage/bin"/>
                                <copy file="bin/gfrake" todir="target/stage/bin"/>
                                <copy todir="target/stage/lib" filtering="true">
                                    <fileset dir="lib" includes="*.rb"/>
                                    <filterset>
                                        <filter token="GLASSFISH_GEM_VERSION" value="${gem.version}"/>
                                    </filterset>
                                </copy>

                                <copy file="target/glassfish-gem.jar" todir="target/stage/lib/java"/>
                                <mkdir dir="target/stage/generators/gfrake/templates/"/>
                                <copy file="config/glassfish.yml"
                                      todir="target/stage/generators/gfrake/templates/"/>
                                <copy todir="target/stage/">
                                    <fileset dir="." includes="README.txt History.txt LICENSE.txt"/>
                                </copy>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                    <execution>
                        <id>post</id>
                        <phase>install</phase>
                        <configuration>
                            <tasks>
                              <attachArtifact file="target/stage/pkg/glassfish-${gem.version}-universal-java.gem"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jruby.plugins</groupId>
                <artifactId>jruby-rake-plugin</artifactId>
                <version>1.2.0</version>
                <executions>
                    <execution>
                        <id>download-actionwebservice</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>rake</goal>
                        </goals>
                        <configuration>
                            <script>
                                require 'rake/gempackagetask'

                                spec = Gem::Specification.new do |s|
                                s.name = "glassfish"
                                s.version = "${gem.version}"
                                s.author = "Vivek Pandey, Jerome Dochez"
                                s.email = "vivek.pandey@sun.com, jerome.dochez@sun.com"
                                s.homepage = "http://glassfishgem.rubyforge.org/"
                                s.platform = "universal-java"
                                s.summary = "GlassFish V3 gem for JRuby"
                                s.description = "GlassFish gem is an embedded GlassFish V3 application server which
                                would help run your Ruby on Rails application"
                                s.files = FileList["{bin,lib,generators,config}/**/*"].to_a
                                s.bindir = "bin"
                                s.require_paths = ["lib"]
                                s.executables = ["glassfish", "gfrake"]
                                s.default_executable = "glassfish"
                                s.test_files = FileList["{test}/**/*test.rb"].to_a
                                s.has_rdoc = true
                                #s.rdoc_options = "-SN -t 'GlassFish gem ${gem.version} Documentation' --main README.txt"
                                #s.extra_rdoc_files = ["README.txt","History.txt", "LICENSE.txt"]
                                s.rubyforge_project = "glassfishgem"
                                s.add_dependency('rack', '&gt;= 0.4.0')

                                end

                                # Create the gem distribution package

                                Rake::GemPackageTask.new(spec) do |pkg|
                                pkg.need_tar = true
                                end

                                task :default =&gt; :gem do
                                end
                            </script>
                            <launchDirectory>target/stage</launchDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.2</version>
                <configuration>
                    <excludes>
                        <exclude>**/itest/**</exclude>
                    </excludes>
                </configuration>
            </plugin>

        </plugins>
        <extensions>
            <extension>
                <groupId>org.glassfish.build</groupId>
                <artifactId>maven-glassfishbuild-extension</artifactId>
                <version>${glassfish.version}</version>
            </extension>

        </extensions>
    </build>

    <profiles>

        <profile>
            <id>itest</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>surefire-itest</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <excludes>
                                        <exclude>none</exclude>
                                    </excludes>
                                    <systemProperties>
                                        <property>
                                            <name>glassfish.home</name>
                                            <value>${project.build.outputDirectory}/../dependency/glassfish</value>
                                        </property>

                                        <property>
                                            <name>test.home</name>
                                            <value>${project.build.outputDirectory}/../test-classes</value>
                                        </property>
                                    </systemProperties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>com.sun.akuma</groupId>
            <artifactId>akuma</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>net.java.dev.jna</groupId>
            <artifactId>jna</artifactId>
            <version>3.0.9</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jruby</groupId>
            <artifactId>jruby-complete</artifactId>
            <version>1.3.1</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.glassfish.extras</groupId>
            <artifactId>glassfish-embedded-nucleus</artifactId>
            <version>${glassfish.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.scripting</groupId>
            <artifactId>grizzly-jruby-module</artifactId>
            <version>${jruby-container.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.scripting</groupId>
            <artifactId>gf-jruby-connector</artifactId>
            <version>${jruby-container.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.grizzly</groupId>
            <artifactId>grizzly-jruby</artifactId>
            <version>${grizzly-jruby.version}</version>
        </dependency>


    </dependencies>

    <scm>
        <connection>scm:svn:https://svn.dev.java.net/svn/glassfish-scripting/trunk/rails/gem</connection>
        <developerConnection>scm:svn:https://svn.dev.java.net/svn/glassfish-scripting/trunk/rails/gem
        </developerConnection>
    </scm>
    <repositories>
        <repository>
            <id>glassfish-repository</id>
            <name>Java.net Repository for Glassfish</name>
            <url>http://download.java.net/maven/glassfish</url>
            <snapshots>
                <updatePolicy>never</updatePolicy>
            </snapshots>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>glassfish-repository</id>
            <name>Java.net Repository for Maven 2</name>
            <url>http://download.java.net/maven/glassfish</url>
        </pluginRepository>
        <pluginRepository>
            <id>maven2.java.net</id>
            <name>Java.net Repository for Maven 2</name>
            <url>http://download.java.net/maven/2</url>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <!-- the ID maps to ~/.m2/settings.xml, so don't change the ID -->
            <id>rator.sfbay</id>
            <url>dav:http://rator.sfbay/maven/repositories/glassfish/</url>
        </repository>
    </distributionManagement>

</project>
