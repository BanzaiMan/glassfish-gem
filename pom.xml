<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.glassfish.distributions</groupId>
    <artifactId>distributions</artifactId>
    <version>10.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>gem</artifactId>
  <packaging>pom</packaging>
  <name>Glassfish JRuby Gem distribution</name>
  <description>This module creates the jruby gem distribution image</description>

  <build>
    <plugins>
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.glassfish.distributions</groupId>
                  <artifactId>nucleus</artifactId>
                  <version>${nucleus.version}</version>
                  <type>zip</type>
                  <overWrite>true</overWrite>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
                <outputDirectory>${project.build.directory}/dependency/glassfish/modules</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
          <artifactId>maven-antrun-plugin</artifactId>
          <executions>
              <execution>
                  <phase>process-resources</phase>
                  <configuration>
                      <tasks>
                          <filter token="GLASSFISH_VERSION" value="${project.version}"/>
                          <copy file="glassfish_rails" todir="target/dependency/glassfish/bin" filtering="true"/>
                          <copy file="glassfish.rb" todir="target/dependency/glassfish/modules" filtering="true"/>
                          <move file="target/dependency/glassfish/domains/domain1/config/domain.xml" toFile="target/dependency/glassfish/domains/domain1/config/domain.xml_ORIG"/>
                          <copy file="domain.xml" todir="target/dependency/glassfish/domains/domain1/config"/>
                      </tasks>
                  </configuration>
                  <goals>
                      <goal>run</goal>
                  </goals>
              </execution>
          </executions>
      </plugin>
      <plugin>
        <groupId>org.jruby.plugins</groupId>
        <artifactId>jruby-rake-plugin</artifactId>
        <version>${jruby.version}</version>
        <executions>
          <execution>
            <id>download-actionwebservice</id>
            <phase>package</phase>
            <goals><goal>rake</goal></goals>
            <configuration>
              <script>
                require 'rake/gempackagetask'

                spec = Gem::Specification.new do |s|
                  s.name = "glassfish"
                  s.version = "0.3.0"
                  s.author = "Vivek Pandey, Pramod Gopinath, Jerome Dochez"
                  s.email = "vivek.pandey@sun.com, pramod.gopinath@sun.com, jerome.dochez@sun.com"
                  s.homepage = "http://wiki.glassfish.java.net/Wiki.jsp?page=JRuby"
                  s.platform = "universal-java"
                  s.summary = "GlassFish V3 Application Server for JRuby"
                  s.description = "GlassFish gem is an embedded GlassFish V3 application server which would help run your Ruby on Rails application"
                  s.files = FileList["{bin,lib,modules,config,javadb,domains,ext}/**/*"].to_a
                  s.bindir = "bin"
                  s.require_paths = ["modules"]
                  s.executables = ["glassfish_rails", "asadmin", "asadmin.bat"]
                  s.default_executable = "glassfish_rails"
                  s.autorequire = "GlassFish"
                  s.test_files = FileList["{test}/**/*test.rb"].to_a
                  s.has_rdoc = false
                  s.extra_rdoc_files = ["README","LICENSE.txt","COPYRIGHT"]
                  s.rubyforge_project = "glassfishgem"
                end

                # Create the gem distribution package

                Rake::GemPackageTask.new(spec) do |pkg|
                  pkg.need_tar = true
                end

                task :default => :gem do
                end
              </script>
              <launchDirectory>target/dependency/glassfish</launchDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.glassfish.external</groupId>
            <artifactId>grizzly-jruby-module</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.extras</groupId>
            <artifactId>gf-jruby-connector</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.common</groupId>
            <artifactId>common-ee-util</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>glassfish-repository</id>
            <name>Java.net Repository for Glassfish</name>
            <url>http://download.java.net/maven/glassfish</url>
	          <snapshots>
			          <updatePolicy>never</updatePolicy>
				    </snapshots>
        </repository>
        <repository>
            <!-- back up glassfish maven repository in case the 'glassfish-repository' goes down -->
            <id>glassfish-repository-wsinterop</id>
            <name>Java.net Repository for Glassfish</name>
            <url>http://maven.dyndns.org/glassfish/</url>
	          <snapshots>
			          <updatePolicy>never</updatePolicy>
				    </snapshots>
        </repository>
        <!-- all the other repositories are inherited -->
    </repositories>

</project>
